extends layout
block link
  -var selected = 'Network';


block content
  table(class="table table-striped table-bordered")
    tbody
      each host in host_list
        tr(class={"success": host.ping, "danger":!host.ping})
          if host.URL
            td(style="text-align: center;"): a(href=host.URL) #{host.name}
          else
            td(style="text-align: center;") #{host.name}
