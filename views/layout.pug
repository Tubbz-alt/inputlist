doctype html
html(lang='en')
  block link
    -var selected = 'Input List';
  
  -var menu = {'Input List': '/', 'Frequency Scan':'/scan', 'Network':'/network'};

  head
    block head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible" content="IE=edge")
      meta(name="viewport" content="width=device-width, initial-scale=1 maximum-scale=1, user-scalable=no")
      title= title
      link(rel="apple-touch-icon" sizes="144x144" href="/images/icon.png")
      link(rel="icon" href="/images/icon.png")
      link(rel='stylesheet', href='/css/style.css')
      meta(name="apple-mobile-web-app-title" content="Input List")
      link(rel='stylesheet' href='/css/bootstrap.min.css')
      script(src='/js/jquery.min.js')
      script(src='/js/bootstrap.min.js')
  
  body
    nav(class="navbar navbar-inverse navbar-fixed-top")
      div(class="container-fluid")
        div(class="navbar-header")
          ul(class="nav navbar-nav")
            each val, key in menu
              if selected === key
                li.active: a(href=val, title=key)= key
              else
                li: a(href=val, title=key)= key
    div(class="container-fluid")
      block content
